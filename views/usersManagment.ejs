<html>
  <style>
    head {
      text-align: center;
    }
    body {
      position: relative;
      text-align: center;
    }
    button#logout {
      position: absolute;
      top: 0;
      right: 0;
    }
    button#backtomenu {
      position: absolute;
      bottom: 0;
      left: 0;
    }
  </style>
  <head>
    <h1>Users Managment Page</h1>
  </head>
  <body>
    <list>
      <%users.forEach(user => {%>
      <ul>
        <%=user.username%>
        <a href="/usersManagment/<%=user.username%>">DELETE</a>
        <a href="/userData/<%=user.username%>">UPDATE</a>
      </ul>

      <% })%>
      <a href="/userData">Add New</a>
    </list>
    <div class="logout">
      <button id="logout" onclick="window.location.href = '/logout'">
        Logout
      </button>
      <button id='backtomenu'onclick="window.location.href = '/menu';">Back to menu</button>
    </body>
</html>

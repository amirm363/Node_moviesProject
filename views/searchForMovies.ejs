<html>
  <style>
    body {
      text-align: center;
    }
    button#logout {
      position: absolute;
      top: 0;
      right: 0;
    }
    button#backtomenu {
      position: absolute;
      bottom: 0;
      left: 0;
    }
  </style>
  <body>
    <form action="/searchForMovies" method="post">
      Name: <input type="search" name="name" /><br />
      Genre:
      <select name="genres">
        <option value="blank"></option>
        <option value="Action">Action</option>
        <option value="Comedy">Comedy</option>
        <option value="Fantasy">Fantasy</option>
        <option value="Horror">Horror</option>
        <option value="Mystery">Mystery</option>
        <option value="Romance">Romance</option>
        <option value="Thriller ">Thriller</option>
      </select>
      <br />
      Language:<select name="languages">
        <option value="blank"></option>
        <option value="Hebrew">Hebrew</option>
        <option value="English">English</option>
        <option value="Japanese">Japanese</option>
        <option value="Hindi">Hindi</option>
        <option value="France">France</option>
        <option value="Spanish">Spanish</option>
      </select>
      <br />
      <input type="submit" value="Search" name="submit" />
      <br />
      <br />
      <br />
    </form>
    <button onclick="window.location.href = '/menu'">Back to menu</button>
    <button id="logout" onclick="window.location.href = '/logout'">
      Logout
    </button>
  </body>
</html>

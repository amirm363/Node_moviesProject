<html>
  <style>
    body {
      text-align: center;
    }
    button#logout {
      position: absolute;
      top: 0;
      right: 0;
    }
  </style>
  <body>
    <table border="1">
      <%movies.forEach(m => {%>
      <tr>
        <td>
          <a href="/searchForMovies/movieData/name|<%=m.name%>"><%=m.name%></a>
        </td>
        <td>
          <%m.genres.forEach(g => {%>
          <a href="/searchForMovies/movieData/genre|<%=g%>"><%=g%></a>
          <%})%>
        </td>
      </tr>
      <%})%>
    </table>
    <br />

    <br />
    <button onclick="window.location.href = '/menu';">Back to menu</button>
    <div class="logout">
      <button id="logout" onclick="window.location.href = '/logout'">
        Logout
      </button>
  </body>
</html>

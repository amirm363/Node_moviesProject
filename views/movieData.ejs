<html>
  <style>
    div {
      text-align: center;
    }
    button#logout {
      position: absolute;
      top: 0;
      right: 0;
    }
  </style>
  <body>
    <button onclick="window.location.href='/menu'">Back to menu</button
    ><br /><br /><br />
    <div>
      <%movie.forEach(m => {%> Movie ID: <%=m.id%><br />
      Movie Name: <%=m.name%><br />
      Movie Genres: <%=[...m.genres]%><br />
      Movie Language: <%=m.language%><br />
      <%if(m.image != null){%>
      <img src="<%=m.image.medium%>" />
      <%}%>
      <hr border="3" />

      <%})%>
    </div>
    <div class="logout">
      <button id="logout" onclick="window.location.href = '/logout'">
        Logout
      </button>
  </body>
</html>
